{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/produit/show.css') }}">
{% endblock %}
{% block title %}Produit{% endblock %}


{% block body %}
	<h1>Produit</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ produit.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ produit.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ produit.description }}</td>
			</tr>
			<tr>
				<th>Prix</th>
				<td>{{ produit.prix }}</td>
			</tr>
			<tr>
				<th>Available</th>
				<td>{{ produit.available ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				{% if produit.image %}
					<img src="{{ asset('uploads/images/' ~ produit.image) }}" alt="{{ produit.name }}" width="300">
				{% else %}
					<p>Aucune image disponible.</p>
				{% endif %}
			</tr>
		</tbody>
	</table>

	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('app_produit_index') }}">back to list</a>
		<a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
		{{ include('produit/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}

