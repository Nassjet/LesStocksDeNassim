{% extends 'base.html.twig' %}

{% block title %}Produit index
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/produit/index.css') }}">
{% endblock %}

{% block body %}
	<h1>Produit index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Description</th>
				<th>Prix</th>
				<th>Available</th>
				<th>images</th>

				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for produit in produits %}
				<tr>
					<td>{{ produit.id }}</td>
					<td>{{ produit.name }}</td>
					<td>{{ produit.description }}</td>
					<td>{{ produit.prix }}</td>
					<td>{{ produit.available ? 'Yes' : 'No' }}</td>
					<td>
						{% if produit.image %}
							<img src="{{ asset('uploads/images/' ~ produit.image) }}" alt="Image produit" style="max-width: 100px;">
						{% else %}
							<span>Pas dâ€™image</span>
						{% endif %}
					</td>
					<td>
						<a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
						<a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
